{
  "bracketSpacing": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    }
  ]
}
